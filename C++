        cin>>luachon;
    switch(luachon){
        case 1:
        dc.themPhim();
        break;
        case 2:
        cin.ignore();
        cout << "Nhập mã phim cần xóa: ";
        getline(cin, ma);
        dc.xoaPhim(ma);
        break;
        case 3:
        cin.ignore();
        cout << "Nhập mã phim cần tìm: ";
        getline(cin, ma);
        if (dc.timKiem(ma)) {
            danhSachPhim::inTieuDe();
            dc.timKiem(ma)->data.xuatPhim();
        } 
        else{
                cout << "Không tìm thấy phim!\n";}
        break;

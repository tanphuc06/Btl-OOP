void qlDanhSachPhim(){
    int luachon;
    while(1){
        cout<<"1.1 Danh sách phim đang chiếu."<<endl;
        cout<<"1.2 Danh sách phim sắp chiếu."<<endl;
        cout<<"0. Quay lại."<<endl;
        cout<<"Chọn chức năng: "<<endl;
        cin>>luachon;
    switch(luachon){
        case 1:
        dangChieu();
        break;
        case 2:
        sapChieu();
        break;
        case 0:
        return ;
    }
    }
}
int main(){
    int luachon;
    while(1){
        cout<<"Quản lý rạp chiếu phim"<<endl;
        cout<<"1. Quản lý danh sách phim."<<endl;
        cout<<"2. Quản lý xuất chiếu."<<endl;
        cout<<"3. Quản lý vé."<<endl;
        cout<<"4. Tổng doanh thu."<<endl;
        cout<<"0. Thoát."<<endl;
        cout<<"Chọn chức năng: "<<endl;
        cin>>luachon;
    switch(luachon){
        case 1:
        qlDanhSachPhim();
        break;
        case 2:
        xuatChieu();
        break;
        case 3:
        ve();
        break;
        case 4:
        doanhThu();
        break;
        case 0:
        return 0;
    }
    }
}

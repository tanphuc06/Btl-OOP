     int luachon;
    while(1){
        cout<<"5.1 Tổng doanh thu trong ngày."<<endl;
        cout<<"5.2 Tổng doanh thu trong tuần."<<endl;
        cout<<"5.3 Tổng doanh thu trong tháng."<<endl;
        cout<<"0. Quay lại."<<endl;
        cout<<"Chọn chức năng: "<<endl;
        cin>>luachon;
    switch(luachon){
        case 1:
        break;
        case 2:
        break;
        case 3:
        break;
        case 0:
        cout << "Thoát chương trình.\n";
        break;
}
}
    }

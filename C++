        cout<<"2. Quản lý phòng chiếu."<<endl;
        cout<<"3. Quản lý suất chiếu."<<endl;
        cout<<"4. Quản lý vé."<<endl;
        cout<<"5. Tổng doanh thu."<<endl;
        cout<<"0. Thoát."<<endl;
        cout<<"Chọn chức năng: "<<endl;
        cin>>luachon;
    switch(luachon){
        case 1:
        qlDanhSachPhim();
        break;
        case 2:
        qlPhongChieu();
        break;
        case 3:
        xuatChieu();
        break;
        case 4:
        ve();
        break;
        case 5:
        doanhThu();
        break;
        case 0:
        cout << "Thoát chương trình.\n";
        return 0;
    }
    }
}
    

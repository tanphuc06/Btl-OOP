        dsv.hienThiVe(ds);
        break;
        case 6:
        break;
        case 7:
        break;
        case 0:
        return;
    }
    }
    }
void xuatChieu(){
    string ma;
    int gio;
   int luachon;
    while(1){
        cout<<"3.1 Thêm xuất chiếu."<<endl;
        cout<<"3.2 Xóa xuất chiếu."<<endl;
        cout<<"3.3 Xem danh sách các xuất chiếu."<<endl;
        cout<<"3.4 Cập nhật xuất chiếu."<<endl;
        cout<<"3.5 Tìm kiếm xuất chiếu theo giờ chiếu."<<endl;
        cout<<"0. Quay lại."<<endl;
        cout<<"Chọn chức năng: "<<endl;
        cin>>luachon;
        cin.ignore();
    switch(luachon){
        case 1:
        ds.themXuatChieu(dc, a);
        break;
        case 2:
        cout<<"Nhập mã xuất chiếu bạn muốn xóa: ";
         getline(cin,ma);
        ds.xoaXuatChieu(ma);
        break;
        case 3:
        ds.xuatDanhSach();
        break;
        case 4:
        cout << "Nhập mã xuất chiếu cần cập nhật: ";
        getline(cin, ma);
        ds.suaXuatChieu(ma, dc, a);
        break;
        case 5:
        do{
            cout<<"Nhập giờ bạn muốn tìm(0-24): ";
            cin>>gio;
        }while(gio<=0 || gio>=25);
        ds.timXuatChieu(gio);
        break;
        case 0:
        return;
    }
    }
}
